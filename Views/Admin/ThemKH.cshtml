@model ShoesStore_agforl.Models.KhachHang

@{
    ViewBag.Title = "ThemKH";
    Layout = "~/Views/Shared/_LayoutQLSP.cshtml";
}


@using (Html.BeginForm("ThemKH", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
