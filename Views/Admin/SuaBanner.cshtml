@model ShoesStore_agforl.Models.QuangCao

@{
    ViewBag.Title = "Suasp";
    Layout = "~/Views/Shared/_LayoutQLSP.cshtml";
}

@using (Html.BeginForm("SuaBanner", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaQC)

        <div class="form-group">
            <label class="control-label col-md-2" for="fileUpload">Hình ảnh</label>
            <div class="col-md-10">
                <input type="file" name="fileUpload" />
                <p style="padding:0 10px; color:red">@ViewBag.Thongbao</p>
                <img src="@Url.Content("~/images/"+Model.Anh)" width="480px" />(Hình ảnh hiện tại)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="HieuGiay">Hiệu Giày</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HieuGiay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HieuGiay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="BaiViet">Bài Viết</label>
            <div class="col-md-10">
                <textarea name="Chitiet">@Model.BaiViet</textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Url">Url </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
            </div>
        </div>

     
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-danger" type="submit">Save</button>

                <button class="btn btn-success" type="submit"><a href="@Url.Action("Giay", "Admin") ">Back to list </a></button>

                @*<input type="submit" value="Save" class="btn btn-default" />*@
            </div>
        </div>
    </div>
}
