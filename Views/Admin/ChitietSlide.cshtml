@model ShoesStore_agforl.Models.Slide

@{
    ViewBag.Title = "ChitietSlide";
    Layout = "~/Views/Shared/_LayoutQLSP.cshtml";
}



<div>
    <h4>Slide</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Brand)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Brand)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Slogan)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Slogan)
        </dd>

        <dt>
            <img src="@Url.Content("~/images/"+  Model.IMG)" width="720px" />
